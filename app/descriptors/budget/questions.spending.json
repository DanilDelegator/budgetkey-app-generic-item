[

  {
    "text": " כלל התמיכות מתקציב זה ש <phase> ב <period>",
    "query": ["SELECT :phase AS \"שנה\",",
              "supporting_ministry AS \"משרד\",",
              "request_type AS \"סוג תמיכה\", ", 
              "support_title AS \"נושא\", ", 
              "'supports/' || budget_code || '/' || year_requested || '/' || recipient || '/' || request_type AS item_id, ", 
              "entity_name as \"מקבל התמיכה\", ",
              "'org/' || entity_kind || '/' || entity_id as entity_item_id, ",
              "sum(amount_paid) as \"סה״כ שולם\"",
              "FROM raw_supports WHERE :phase :period AND budget_code like ':code%%' GROUP BY 1, 2, 3, 4, 5, 6, 7",
              "order by :phase desc"],
    "parameters": {
      "phase": {
        "שולמו": "year_paid",
        "אושרו": "year_requested"
      },
      "period": {
        "כל השנים": ">0",
        "2008": "=2008",
        "2009": "=2009",
        "2010": "=2010",
        "2011": "=2011",
        "2012": "=2012",
        "2013": "=2013",
        "2014": "=2014",
        "2015": "=2015",
        "2016": "=2016",
        "2017": "=2017",
        "2018": "=2018",
        "2019": "=2019"
      }
    },
    "defaults": {
      "phase": "אושרו",
      "period": "כל השנים"
    },
    "headers": [
      "נושא:item_link(item_id)", 
      "משרד", 
      "סוג תמיכה", 
      "מקבל התמיכה:item_link(entity_item_id)",
      "שנה",
      "סה״כ שולם:number"
    ]
  },
  {
    "text": "סך התמיכות מתקציב זה, לפי מקבל התמיכה ש<phase> עבור בקשות מ <period>",
    "query": ["SELECT support_title AS \"נושא\", ", 
              "budget_code,", 
              "budget_code AS \"מספר תקנה\", ", 
              "entity_name as \"מקבל התמיכה\", ",
              "'org/' || entity_kind || '/' || entity_id as item_id, ",
              "sum(:phase) as \"סה״כ\",",
              "min(year_requested) || '-' || max(year_requested)  as \"תקופה\" ", 
              "FROM raw_supports WHERE year_requested :period AND  budget_code like ':code%%' GROUP BY 1, 2, 3, 4, 5 ORDER BY 4 DESC nulls last"],
    "parameters": {
      "phase": {
        "שולמו": "amount_paid",
        "אושרו": "amount_approved"
      },
      "period": {
        "כל השנים": ">0",
        "2008": "=2008",
        "2009": "=2009",
        "2010": "=2010",
        "2011": "=2011",
        "2012": "=2012",
        "2013": "=2013",
        "2014": "=2014",
        "2015": "=2015",
        "2016": "=2016",
        "2017": "=2017",
        "2018": "=2018",
        "2019": "=2019"
      }
    },
    "defaults": {
      "phase": "אושרו",
      "period": "כל השנים"
    },
    "headers": [
      "נושא",
      "מספר תקנה:budget_code:search_term(budget_code)",
      "מקבל התמיכה:item_link(item_id)",
      "תקופה",
      "סה״כ:number"
    ]
  },
  {
    "text": " סך ההתקשרויות מתקציב זה לפי ספק מ <period>",
    "query": [
              "SELECT sum(volume) AS \"סה״כ היקף\",",
              "sum(executed) AS \"סה״כ בוצע\",",
              "currency AS \"מטבע\", ", 
              "((publisher->>0) || '/' || (purchasing_unit->>0)) AS \"היחידה הרוכשת\",",
              "purchase_method->>0 AS \"אופן הרכישה\", ", 
              "entity_name as \"ספק\", ",
              "'org/' || entity_kind || '/' || entity_id as item_id, ",
              "min(min_year)||' - '||max(max_year) AS \"תקופה\"",
              "FROM contract_spending ", 
              "WHERE budget_code like ':code%%' AND ((:period <= min_year) OR (min_year IS NULL AND :period <= max_year)) ", 
              "GROUP BY 3,4,5,6,7 ORDER BY 1 DESC nulls LAST"
            ],
    "parameters": {
      "period": {
        "כל השנים": "0",
        "2008": "2008",
        "2009": "2009",
        "2010": "2010",
        "2011": "2011",
        "2012": "2012",
        "2013": "2013",
        "2014": "2014",
        "2015": "2015",
        "2016": "2016",
        "2017": "2017",
        "2018": "2018",
        "2019": "2019"
      }
    },
    "defaults": {
      "period": "כל השנים"
    },
    "headers": [
        "היחידה הרוכשת",
        "ספק:item_link(item_id)",
        "אופן הרכישה",
        "מטבע",
        "סה״כ היקף:number",
        "סה״כ בוצע:number",
        "תקופה"
    ]
  },
  {
    "text": " כלל ההתקשרויות מתקציב זה לפי ספק ב <period>",
    "query": [
              "SELECT volume AS \"היקף\",",
              "executed AS \"ביצוע\",",
              "currency AS \"מטבע\",",
              "min_year||'-'||max_year AS \"תקופה\", ", 
              "purpose AS \"תיאור\", ", 
              "'contract-spending/' || order_id || '/' || budget_code || '/' || publisher_name AS cs_item_id, ", 
              "case when entity_name is null then supplier_name->>0 else entity_name end as \"ספק\", ",
              "case when entity_id is null then null else ('org/' || entity_kind || '/' || entity_id) end as e_item_id, ",
              "purchase_method->>0 AS \"אופן רכישה\",",
              "((publisher->>0) || '/' || (purchasing_unit->>0)) AS \"היחידה הרוכשת\", ", 
              "order_date AS \"תאריך הזמנה\",",
              "start_date AS \"תאריך התחלה\",",
              "end_date AS \"תאריך סיום\"",
              "FROM contract_spending ", 
              "WHERE budget_code like ':code%%' AND ((:period BETWEEN min_year AND max_year) or (min_year is null and :period <= max_year) or ", 
              "(max_year is null and :period >= min_year) or (:period is null))",
              "ORDER BY order_date desc nulls last"
            ],
    "parameters": {
      "period": {
        "כל השנים": "null",
        "2014": "2014",
        "2015": "2015",
        "2016": "2016",
        "2017": "2017",
        "2018": "2018",
        "2019": "2019"
      }
    },
    "defaults": {
      "period": "כל השנים"
    },
    "headers": [
      "היחידה הרוכשת",
      "ספק:item_link(e_item_id)",        
      "תיאור:item_link(cs_item_id)",
      "אופן רכישה",
      "היקף:number",
      "ביצוע:number",
      "מטבע",
      "תאריך הזמנה",
      "תאריך התחלה",
      "תאריך סיום"
    ]
  }
]
